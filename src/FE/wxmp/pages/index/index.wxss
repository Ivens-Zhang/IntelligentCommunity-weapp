swiper {
  width: 100%;
}

swiper-item {
  width: 100%;
  height: 400rpx;
}

.swiper-image {
  width: 100%;
}

/* 天气样式 */

.weather {
  width: 90%;
  display: flex;
  margin: 0 auto;
  justify-content: space-around;
  margin-top: 40rpx;
  border: 1px solid gray;
  background: rgba(255, 255, 255, .3);
  box-shadow: 3px 3px 6px 3px rgba(0, 0, 0, .3);
}

.weather .todayWeather {
  border-right: 1px solid gray;
}

.weather image{
  width: 150rpx;
  height: 150rpx;
  padding-left: 60rpx;
  padding-top: 40rpx;
}

.weather .temperature {
  padding-left: 50rpx;
}

.weather .cond {
  display: inline-block;
  position: relative;
  top: -50rpx;
  left: 20rpx;
  font-size: large;
}
/* 天气样式 */



/* 文章样式 */

.article {
  width: 90%;
  margin: 20rpx auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.articleItem {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 5rpx 0;
  padding-bottom: 5rpx;
  border-bottom: 1rpx solid gray;
}

.articleItem image {
  display: inline-block;
  width: 130rpx;
  height: 130rpx;
  margin: 0 0 5rpx 5rpx;
}

.articleItem text {
  width: 500rpx;
  font-size: 35rpx;
}


/* 文章样式 */